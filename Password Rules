
Function ValidatePassword {
Param ( [string]$Password,
        [string]$uppercaseLetters = 'A-Z' ) 

    If ($Password.length -lt 12) {
        Write-host "Password must have at least 12 characters!"
        return $false
    }
    If ($userPassword -notmatch $uppercaseLetters){
        Write-host "Password must contain at least one"
        return $false
    }

    }
    
    do {
    $userPassword = Read-Host "Create a password. It should be at least 12 characters in length, at least 1 special character, at least 1 uppercase letter, and 2 numbers."
    } until (ValidatePassword -password $userPassword)

    Write-Host "Your Password has been created!"
